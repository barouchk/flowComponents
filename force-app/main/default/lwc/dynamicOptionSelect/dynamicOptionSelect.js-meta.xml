<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <masterLabel>Dynamic Option Select</masterLabel>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="type" type="String" label="Component Type" role="inputOnly" description="radio, button, dropdown, checkbox (default)"/>      
            <property name="name" type="String" label="Name" role="inputOnly" description="name for grouping checkbox/radio list"/>
            <property name="label" type="String" label="Label" role="inputOnly"/>
            <property name="required" type="Boolean" label="Required" role="inputOnly"/>
            <property name="columns" type="String" label="Columns" role="inputOnly" description="How many columns to divide checkbox/radio list"/>
            <property name="options" type="apex://DynamicOption[]" label="Options" role="inputOnly" />
            <property name="selectedItems" type="apex://DynamicOption[]" label="Selected Items" />
            <property name="selectedValues" type="String[]" label="Selected Values"/>
            <property name="defaultValue" type="String" label="Default Value"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>