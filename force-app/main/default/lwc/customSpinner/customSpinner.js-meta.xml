<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property label="Help Text" name="helpText" type="String" role="inputOnly" description="text that will show under the spinner"/>
            <property label="Spinner Size" name="size" type="String" role="inputOnly" description="'small', 'medium', 'large', default:medium"/>
            <property label="Variant" name="variant" type="String" role="inputOnly"/>
            <property label="Position" name="position" type="String" role="inputOnly" description="'fixed','absolute','relative','static' default:fixed"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>