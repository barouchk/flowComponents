<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <description>Custom Page Header</description>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property label="Icon" name="icon" type="String" role="inputOnly"/>
            <property label="Title" name="title" type="String" role="inputOnly"/>
            <property label="Sub Title" name="subTitle" type="String" role="inputOnly"/>
            <property label="Fields" name="fields" type="String" description="as json string: [{'label':'field1', 'value':'value1'}]"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>